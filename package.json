{
  "name": "@eclass/ui-kit",
  "description": "Elementos UI transversales eClass",
  "version": "1.1.0",
  "files": [
    "dist"
  ],
  "main": "dist/eclass-ui-kit.umd.js",
  "module": "dist/eclass-ui-kit.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/eclass-ui-kit.es.js",
      "require": "./dist/eclass-ui-kit.umd.js"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclass/ui-kit"
  },
  "bugs": {
    "url": "https://github.com/eclass/ui-kit/issues"
  },
  "homepage": "https://github.com/eclass/ui-kit#readme",
  "author": "Team eClass (https://www.eclass.cl/)",
  "contributors": [
    "Alvaro Alvarez <alv.ale.alvarez@gmail.com>",
    "Sebastián González Riffo <sebastian@gonzalezr.cl>"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:types",
    "build:types": "tsc src/index.ts --declaration --emitDeclarationOnly --jsx react --esModuleInterop --outDir dist",
    "serve": "vite preview",
    "test": "jest --coverage",
    "test-local": "jest --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs/ ",
    "lint": "npm run format && npm run eslint",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "eslint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "lint:check": "eslint 'src/**/*.{ts,tsx}'",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "storybook-deployer": {
    "gitUsername": "SeGonzalezR",
    "gitEmail": "sebastian@gonzalezr.cl",
    "commitMessage": "docs(story): deploy storybook [skip ci]"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^16.8 || 17.x",
    "react-dom": "^16.8 || 17.x"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.1",
    "@storybook/addon-actions": "6.3.8",
    "@storybook/addon-essentials": "6.3.8",
    "@storybook/addon-links": "6.3.8",
    "@storybook/react": "6.3.8",
    "@storybook/storybook-deployer": "2.8.10",
    "@testing-library/dom": "8.3.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "27.0.1",
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-config-standard-jsx": "10.0.0",
    "eslint-config-standard-react": "11.0.1",
    "eslint-config-standard-with-typescript": "21.0.1",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.4.2",
    "eslint-plugin-jest-dom": "3.9.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.25.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-testing-library": "4.12.2",
    "jest": "27.1.1",
    "jest-watch-typeahead": "0.6.4",
    "prettier": "2.4.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "semantic-release": "17.4.7",
    "storybook-builder-vite": "0.0.12",
    "ts-jest": "27.0.5",
    "typescript": "4.4.2",
    "vite": "2.5.6"
  }
}
