    "react-dom": "17.0.2",
    "semantic-release": "19.0.5",
    "storybook-builder-vite": "0.1.23",
    "ts-jest": "27.1.5",
    "ts-patch": "2.0.1",
    "typescript": "4.6.3",
    "typescript-transform-paths": "3.3.1",
    "vite": "2.9.16",
    "vite-tsconfig-paths": "3.4.1"
  },
  "dependencies": {
    "@chakra-ui/react": "1.8.9",
